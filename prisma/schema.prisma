generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model Account {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String
  name      String
  password  String
  dob       DateTime?
  gender    Gender?
  phone     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  Session   Session[]

  @@index([email,id])
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  accountId Int
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  deviceInfo String?  //  th√¥ng tin thi·∫øt b·ªã
  ipAddress  String?  //  ƒë·ªãa ch·ªâ IP
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastUsedAt DateTime? //  th·ªùi gian s·ª≠ d·ª•ng cu·ªëi

  @@index([accountId])
  @@index([expiresAt])
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  description String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id        Int      @id @default(autoincrement())
  homeTeam  String
  awayTeam  String
  kickOff   DateTime   // üîπ l∆∞u ng√†y + gi·ªù b·∫Øt ƒë·∫ßu tr·∫≠n
  location  String
  league    String
  homeLogo  String
  awayLogo  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}